{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "downlevelIteration": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": "./src",
    "paths": {
      "@*": [
        "modules/*",
      ]
    }
  }
}
